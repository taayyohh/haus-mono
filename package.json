{
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:app": "cd apps/lucidhaus && dotenv -e .env  -e ../../.env -c development -- turbo run dev",
    "build:app": "cd apps/lucidhaus && dotenv -e .env  -e ../../.env -c development -- turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-config-turbo": "latest",
    "lint-staged": "^13.3.0",
    "turbo": "^1.12.3"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.17.1+sha256.a1e0133f6801c13039ae41309e5e5a7d1058a3a1e1edd020a4944a83c5368d04"
}
